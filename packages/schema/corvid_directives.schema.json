{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CorvidDirectives",
  "type": "object",
  "required": ["version", "directives"],
  "properties": {
    "version": { "type": "string", "const": "1.0" },
    "directives": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "enum": ["blink", "caw", "preen", "hop", "headBob", "walk"]
          },
          "ms": { "type": "number", "minimum": 0 },
          "speed": { "type": "number" },
          "loop": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

